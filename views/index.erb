<!DOCTYPE html>
<html xmlns:fb="https://www.facebook.com/2008/fbml">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/screen.css" media="screen">
    <script>
      window.App = <%= app_data.to_json %>;
    </script>
    <script src="//connect.facebook.net/en_US/all.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="/javascripts/app.js" type="text/javascript"></script>
  </head>
  <body>
    <div id="fb-root"></div>

    <% if @users %>
      <h1>Hej <%= user.name %></h1>
      <h2>Recommendations</h2>

      <% for user in @users %>
        <iframe width="100%" height="165" scrolling="no" src="http://wt.soundcloud.com/player/?url=http://api.soundcloud.com/users/<%= user['id'] %>?how_comments=false&amp;auto_play=false&amp;show_playcount=true&amp;show_artwork=true&amp" frameborder="0"></iframe>
      <% end %>
    <% end %>

    <form id="auth-form" action="/auth" method="POST">
      <input id="access-token" type="hidden" name="token"/>
    </form>
  </body>
</html>
